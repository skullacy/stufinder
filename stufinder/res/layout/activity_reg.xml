<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/regback"
    
    >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
	        <EditText
	            android:id="@+id/writep"
	            android:hint="등록할물건이 무엇입니까?"
	            android:textSize="12sp"
	            android:layout_width="235dp"
	            android:layout_height="30dp"
	            android:layout_marginTop="57dp"
	            android:layout_marginLeft="100dp"
	            android:layout_marginBottom="14dp"
	            android:paddingLeft="5dp"
				android:background="@drawable/mj"	            
	        />
		    <ImageView 
		        android:id="@+id/imageView"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_marginLeft="100dp"
		        android:layout_below="@id/writep"
		        >
	  	    </ImageView>
		    <Button
		        android:id="@+id/photoUpdate"
		        android:layout_width="150dp"
		        android:layout_height="30dp"
		       	android:background="#4d453b"
		       	android:layout_below="@id/writep"
		       	android:layout_toRightOf="@id/imageView"
		       	android:text="사진등록"
		       	android:textSize="12sp"
		       	android:textColor="#fff"/>
	        <EditText 
	            android:id="@+id/post"
	            android:layout_width="215dp"
	            android:layout_height="30dp"
	            android:singleLine="true"
	            android:textSize="12sp"
	            android:hint="물건을 잃어버린(습득)한 위치"
	            android:layout_below="@id/photoUpdate"
	            android:layout_marginLeft="120dp"
	          	android:layout_marginTop="14dp"
	            android:background="@drawable/mj"
	            android:paddingLeft="5dp"
	            />
	   
	        <EditText 
	            android:id="@+id/phonet"
	            android:layout_width="235dp"
	            android:layout_height="30dp"
	            android:singleLine="true"
	            android:hint="ex)01011112222"
	            android:inputType="phone"
	            android:layout_toRightOf="@id/phone"
	            android:layout_below="@id/post"
	            android:layout_marginTop="11dp"
	            android:background="@drawable/mj"
	            android:layout_marginLeft="100dp"
	            android:paddingLeft="5dp"
	            />
		       
		
		   	  <Button
		        android:id="@+id/dateb"
		        android:background="#4d453b"
		        android:layout_width="180dp"
		        android:layout_height="30dp"
		        android:textColor="#fff"
		        android:textSize="12sp"
		        android:layout_marginLeft="100dp"
		        android:layout_marginTop="11dp"
		        android:layout_below="@id/phonet"
				/>
	          <EditText 
	            android:id="@+id/infot"
	            android:layout_width="300dp"
	            android:layout_height="200dp"
	            android:hint="주인을 잃은 물건에대한 자세한 정보를 입력하세요"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/dj"
	            android:layout_marginTop="40dp"
	            android:textSize="12sp"
	            android:layout_below="@id/dateb"
	            android:paddingLeft="5dp"
	            />
	          
	          <Button
	              android:id="@+id/saved"
	              android:layout_width="wrap_content"
	              android:layout_height="40dp"
	              android:layout_below="@id/infot"
	              android:padding="5dp"
	              android:background="#924949"
	              android:layout_marginTop="6dp"
	              android:textSize="13sp"
	              android:textColor="#fff"
	              android:text="저장 및 위치설정하기"
	              android:layout_centerHorizontal="true"
	              />
	        
       </RelativeLayout>
      
       
    </ScrollView>
    
 

</RelativeLayout>